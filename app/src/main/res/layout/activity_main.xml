<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/topcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_friend1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_launcher"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/img_friend2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_launcher"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/img_friend3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_launcher"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/img_friend4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_launcher"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/addMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_launcher"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomlinear1"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_below="@+id/topcontainer"
        android:layout_weight="0.42"
        android:background="#A4C639"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drag Me"
            android:textSize="30sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomlinear"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_below="@+id/bottomlinear1"
        android:layout_weight="0.28"
        android:background="#E52B50"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/drop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher"
            android:visibility="gone" />
    <ImageView
            android:id="@+id/drop1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher"
            android:visibility="gone" />

        <TextView
            android:id="@+id/Sucess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drag Here"
            android:textSize="45sp"
             />
    </LinearLayout>

    <!-- <SearchView -->
    <!-- android:id="@+id/searchView" -->
    <!-- android:layout_width="718dp" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_gravity="center_horizontal" -->
    <!-- android:layout_weight="0.07" /> -->

</RelativeLayout>